# =============================================================================
# FITNESS APPLICATION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=fitness-application
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For Development (H2 - leave as is)
DATABASE_URL=jdbc:h2:mem:testdb
DATABASE_DRIVER=org.h2.Driver
DATABASE_USERNAME=sa
DATABASE_PASSWORD=password
H2_CONSOLE_ENABLED=true

# For Production (PostgreSQL - uncomment and configure)
# DATABASE_URL=jdbc:postgresql://localhost:5432/fitness_app
# DATABASE_DRIVER=org.postgresql.Driver
# DATABASE_USERNAME=your_postgres_username
# DATABASE_PASSWORD=your_postgres_password
# H2_CONSOLE_ENABLED=false
# DDL_AUTO=validate

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a strong secret key (minimum 256 bits)
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-signing-key-here-minimum-256-bits
JWT_EXPIRATION=86400000

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-actual-gemini-api-key-here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Gmail SMTP Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# =============================================================================
# OAUTH2 CONFIGURATION
# =============================================================================
# Google OAuth2
# Get from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
# Get from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
OAUTH2_REDIRECT_URIS=http://localhost:3000/oauth2/redirect

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
